<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.auctiongameclient.Controller.ConnectController">
    <Label text="서버 접속"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="포트 번호:"/>
        <TextField fx:id="portField" promptText="포트 번호 입력"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="이름:"/>
        <TextField fx:id="nameField" promptText="이름 입력"/>
    </HBox>
    <Button text="접속" onAction="#connectToServer"/>
</VBox>
