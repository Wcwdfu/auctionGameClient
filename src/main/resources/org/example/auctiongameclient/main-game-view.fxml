<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="730.0" prefWidth="900.0" styleClass="font" stylesheets="@../../../css/auction-client-view.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.auctiongameclient.Controller.MainGameController">

    <!-- 게임진행 메세지 표시 영역-->
    <TextArea fx:id="mainMessageArea" editable="false" prefHeight="400.0" prefWidth="450.0" styleClass="messageArea"
              stylesheets="@../../../css/auction-client-view.css"/>

    <!-- 경매품목 이미지 표시 영역 -->
    <ImageView fx:id="goodsImageView" fitHeight="288.0" fitWidth="291.0" layoutX="450.0"/>

    <!-- 경매 진행 상호작용 버튼 영역 -->
    <VBox layoutX="741.0" prefHeight="288.0" prefWidth="161.0" styleClass="font"
          stylesheets="@../../../css/auction-client-view.css">

        <Button fx:id="participateButton" disable="true" onAction="#sendParticipateRequest" prefHeight="52.0"
                prefWidth="161.0" stylesheets="@../../../css/auction-client-view.css" text="경매 응찰">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>

        <Button fx:id="notParticipateButton" disable="true" onAction="#sendNotParticipateRequest" prefHeight="52.0"
                prefWidth="161.0" stylesheets="@../../../css/auction-client-view.css" text="경매 불응찰">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>

        <Label fx:id="userMoneyLabel" text="소지 금액: 0" prefHeight="30" style="-fx-font-size: 18px;"/>

        <Button fx:id="bid5Button" disable="true" onAction="#sendBid5" prefHeight="52.0" prefWidth="161.0"
                stylesheets="@../../../css/auction-client-view.css" text="5원">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>

        <Button fx:id="bid1Button" disable="true" onAction="#sendBid1" prefHeight="52.0" prefWidth="161.0"
                stylesheets="@../../../css/auction-client-view.css" text="1원">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>

        <Button mnemonicParsing="false" prefHeight="52.0" prefWidth="161.0"
                stylesheets="@../../../css/auction-client-view.css" text="게임종료">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </VBox>

    <!-- 카운트 표시 -->
    <TextArea fx:id="countArea" disable="true" layoutX="450.0" layoutY="285.0" prefHeight="115.0" prefWidth="291.0"/>

    <!--  음악 UI 영역     -->
    <HBox fx:id="musicBox" layoutX="741.0" layoutY="285.0" prefHeight="115.0" prefWidth="161.0"
          styleClass="music-box-playing" stylesheets="@../../../css/auction-client-view.css">
        <Button fx:id="musicButton" mnemonicParsing="false" onAction="#musicPlayPause" prefHeight="25.0"
                prefWidth="29.0" styleClass="pauseButton" stylesheets="@../../../css/auction-client-view.css">
            <HBox.margin>
                <Insets left="10.0" right="10.0" top="85.0"/>
            </HBox.margin>
        </Button>
        <Slider fx:id="volumeSlider" prefHeight="14.0" prefWidth="121.0">
            <HBox.margin>
                <Insets top="90.0"/>
            </HBox.margin>
        </Slider>
    </HBox>
    <MediaView fx:id="mediaView"/>

    <!-- 유저 프로필 이름과 소지한 아이템 표시 -->
    <HBox layoutY="405" spacing="20" style="-fx-padding: 0 0 0 18;">
        <!-- 유저 이름 표시 -->
        <HBox alignment="CENTER" spacing="18">
            <Label fx:id="user1Label" prefHeight="80" prefWidth="80" text="유저1"
                   style="-fx-border-color: black; -fx-background-color: lightblue;
                   -fx-text-alignment: center; -fx-alignment: center; -fx-font-weight: bold;
                   -fx-padding: 10;" />
            <Label fx:id="user2Label" prefHeight="80" prefWidth="80" text="유저2"
                   style="-fx-border-color: black; -fx-background-color: lightblue;
                   -fx-text-alignment: center; -fx-alignment: center; -fx-font-weight: bold;
                   -fx-padding: 10;" />
            <Label fx:id="user3Label" prefHeight="80" prefWidth="80" text="유저3"
                   style="-fx-border-color: black; -fx-background-color: lightblue;
                   -fx-text-alignment: center; -fx-alignment: center; -fx-font-weight: bold;
                   -fx-padding: 10;" />
            <Label fx:id="user4Label" prefHeight="80" prefWidth="80" text="유저4"
                   style="-fx-border-color: black; -fx-background-color: lightblue;
                   -fx-text-alignment: center; -fx-alignment: center; -fx-font-weight: bold;
                   -fx-padding: 10;" />

        </HBox>

        <!-- 소지 아이템 표시 -->
        <VBox spacing="10">
            <HBox alignment="CENTER" spacing="5">
                <Pane fx:id="itemSlot1" prefHeight="60" prefWidth="60">
                    <Label fx:id="itemSlot1Label" layoutX="5" layoutY="45" text="x0"
                           style="-fx-text-fill: black; -fx-font-weight: bold;"/>
                </Pane>
                <Pane fx:id="itemSlot2" prefHeight="60" prefWidth="60" >
                    <Label fx:id="itemSlot2Label" layoutX="5" layoutY="45" text="x0"
                           style="-fx-text-fill: black; -fx-font-weight: bold;"/>
                </Pane>
                <Pane fx:id="itemSlot3" prefHeight="60" prefWidth="60" >
                    <Label fx:id="itemSlot3Label" layoutX="5" layoutY="45" text="x0"
                           style="-fx-text-fill: black; -fx-font-weight: bold;"/>
                </Pane>
                <Pane fx:id="itemSlot4" prefHeight="60" prefWidth="60" >
                    <Label fx:id="itemSlot4Label" layoutX="5" layoutY="45" text="x0"
                           style="-fx-text-fill: black; -fx-font-weight: bold;"/>
                </Pane>
                <Pane fx:id="itemSlot5" prefHeight="60" prefWidth="60" >
                    <Label fx:id="itemSlot5Label" layoutX="5" layoutY="45" text="x0"
                           style="-fx-text-fill: black; -fx-font-weight: bold;"/>
                </Pane>
                <Pane fx:id="itemSlot6" prefHeight="60" prefWidth="60" >
                    <Label fx:id="itemSlot6Label" layoutX="5" layoutY="45" text="x0"
                           style="-fx-text-fill: black; -fx-font-weight: bold;"/>
                </Pane>
                <Pane fx:id="itemSlot7" prefHeight="60" prefWidth="60" >
                    <Label fx:id="itemSlot7Label" layoutX="5" layoutY="45" text="x0"
                           style="-fx-text-fill: black; -fx-font-weight: bold;"/>
                </Pane>
            </HBox>
        </VBox>
    </HBox>

    <!-- 채팅 표시 영역 -->
    <TextArea fx:id="chatArea" editable="false" layoutX="-5.0" layoutY="500" prefHeight="170" prefWidth="900.0"/>

    <!-- 채팅 UI 영역 -->
    <HBox alignment="CENTER" layoutY="670" prefHeight="60" prefWidth="903.0" spacing="10">
        <TextField fx:id="chatInputField" prefHeight="38.0" prefWidth="742.0" promptText="메시지를 입력하세요"/>
        <Button onAction="#sendChatMessage" prefHeight="38.0" prefWidth="121.0" text="전송"/>
    </HBox>


</AnchorPane>
